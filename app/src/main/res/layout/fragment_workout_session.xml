<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.workout.WorkoutSessionFragment">

    <!-- Overall Workout Timer -->
    <TextView
        android:id="@+id/textWorkoutTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 00:00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Current Exercise Name -->
    <TextView
        android:id="@+id/textCurrentExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise: Bench Press"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Progress Indicator -->
    <TextView
        android:id="@+id/textExerciseProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 1/6"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- Next Exercise Button -->
    <Button
        android:id="@+id/btnNextExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Exercise"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="24dp" />

    <!-- Hydration Reminder -->
    <TextView
        android:id="@+id/textHydrationReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hydration: 0 / 10 oz"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Hydration Progress Bar -->
    <ProgressBar
        android:id="@+id/progressHydration"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:progressTint="@android:color/holo_blue_light"
        android:layout_marginBottom="12dp" />

    <!-- Sip Button -->
    <Button
        android:id="@+id/btnSipWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I took a sip!" />

</LinearLayout>
