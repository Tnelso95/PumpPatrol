<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.workout.WorkoutSessionFragment">

    <!-- Overall Workout Timer -->
    <TextView
        android:id="@+id/textWorkoutTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 00:00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Current Exercise Name -->
    <TextView
        android:id="@+id/textCurrentExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise: Bench Press"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Progress Indicator (Optional) -->
    <TextView
        android:id="@+id/textExerciseProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 1/6"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- Next Exercise Button -->
    <Button
        android:id="@+id/btnNextExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Exercise"
        android:textSize="18sp"
        android:padding="10dp" />

</LinearLayout>
