<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Container for all dropdowns -->
    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Body Part Spinner -->
        <Spinner
            android:id="@+id/spinnerBodyPart1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Workout Spinner 1 for first body part -->
        <Spinner
            android:id="@+id/spinnerWorkout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Workout Spinner 2 for first body part -->
        <Spinner
            android:id="@+id/spinnerWorkout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Workout Spinner 3 for first body part -->
        <Spinner
            android:id="@+id/spinnerWorkout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Second Body Part Spinner -->
        <Spinner
            android:id="@+id/spinnerBodyPart2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <!-- Workout Spinner 1 for second body part -->
        <Spinner
            android:id="@+id/spinnerWorkout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Workout Spinner 2 for second body part -->
        <Spinner
            android:id="@+id/spinnerWorkout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Workout Spinner 3 for second body part -->
        <Spinner
            android:id="@+id/spinnerWorkout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonShowWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Workout"
        app:layout_constraintTop_toBottomOf="@id/spinnerWorkout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- TextView to display the formatted workout -->
    <TextView
        android:id="@+id/textCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/buttonShowWorkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>



